namespace fb;

enum PlayerCommandType:byte {
    // 无效命令
    Invalid = 0, 
    // 向上移动
    MoveTop = 1,
    // 向下移动
    MoveDown = 2,
    // 向左上移动
    MoveTopLeft = 3,
    // 向右上移动
    MoveTopRight = 4,
    // 向左下移动
    MoveDownLeft = 5,
    // 向右下移动
    MoveDownRight = 6,
}

table Vector2Int {
    x:int;
    y:int;
}

table PlayerInput {
    player_id:int;
    frame:int;
    command_type:PlayerCommandType;
}

table Player {
    player_id:int;
    position:fb.Vector2Int;
}